package com.example.practice

import androidx.appcompat.app.AppCompatActivity
import android.os.Bundle
import android.util.Log

class MainActivity : AppCompatActivity() {
    //Inputs
    var Genre: String = "Deep House"
    var Lenght: Double = 2.44
    var Day: Int = 25
    var Mounth: String = "Septrmber"
    var Year: Float = 2020f
    override fun onCreate(savedInstanceState: Bundle?) {
        super.onCreate(savedInstanceState)
        setContentView(R.layout.activity_main)
        //return values of a functions
        genre()
        lenght()
        Released()
    }
    //function for genre
    fun genre():Boolean{
        println("Genre: " +Genre)
        return true
    }
    //function for length
    fun lenght(){
        println("Lenght: "+Lenght)
    }
    //function for released
    fun Released(){
        println("Released: "+Day+Mounth+Year)
    }
}
